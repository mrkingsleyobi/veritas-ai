# Environment variables for Deepfake Detection Platform Frontend

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000
VITE_WS_BASE_URL=ws://localhost:3000

# Authentication
VITE_AUTH_TIMEOUT=3600000
VITE_TOKEN_EXPIRY=24h
VITE_REFRESH_TOKEN_EXPIRY=7d
VITE_PASSWORD_MIN_LENGTH=8
VITE_ENABLE_2FA=false

# Third-party Services
VITE_SENTRY_DSN=
VITE_LOGROCKET_APP_ID=
VITE_GA_ID=

# Feature Flags
VITE_FEATURE_DETECTION=true
VITE_FEATURE_COMPLIANCE=true
VITE_FEATURE_REPORTING=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_BULK=false
VITE_FEATURE_COLLABORATION=false

# Performance
VITE_UPLOAD_CHUNK_SIZE=1048576
VITE_MAX_CONCURRENT_UPLOADS=3
VITE_MAX_FILE_SIZE=104857600

# Analytics
VITE_GOOGLE_ANALYTICS_ID=

# Storage
VITE_STORAGE_TYPE=local

# UI Settings
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss
VITE_ITEMS_PER_PAGE=10

# Application Info
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=Deepfake Detection Platform

# Development Only
VITE_MOCK_API=false
VITE_DEBUG_LOGGING=false

# Security
VITE_CONTENT_SECURITY_POLICY=true
VITE_STRICT_TRANSPORT_SECURITY=true